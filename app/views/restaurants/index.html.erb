<div class="center-align">
  <h1>Restaurants</h1>

    <h3>Filter Restaurants:</h3>
    <%= form_tag("/restaurants", method: "get") do %>
      <%= select_tag "borough", options_from_collection_for_select(Restaurant.all, "id", "borough"), include_blank: true %>
      <%= submit_tag "Filter" %>
    <% end %>

    <% Restaurant.all.sort_by(&:name).each do |rest| %>
      <p><%= link_to rest.name, restaurant_path(rest.id) %></p>
    <% end %>
    <br></br>

    <% if logged_in? %>
      <h4><%= link_to "Create a New Restaurant", new_restaurant_path%></h4>
    <% end %>

</div>
