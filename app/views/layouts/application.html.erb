<!DOCTYPE html>
<html>
  <head>
    <title>SliceNyc</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" name="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        <a class="navar-brand" href="<%= root_url %>">Home</a>

        <% if logged_in? %>
          <%= link_to "#{current_user.username}'s Profile", user_path(current_user), class:"navbar-brand" %>
          <%= link_to "Log Out", logout_path, method: :delete, class:"navbar-brand" %>
        <% else %>
          <%= link_to "Login", login_path %>
          <%= link_to "Sign Up", signup_path, class: "signup button btn-regular" %>
        <% end %>
        </div>

      </div>

    </div>




    <% if flash[:alert] %>
      <div class="alert"><%= flash[:alert] %></div>
    <% end %>

    <%= yield %>

  </body>
  <footer>
  </footer>
</html>
