<!DOCTYPE html>
<html>
  <head>
    <title>SliceNyc</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Crimson+Text" rel="stylesheet">
    <link rel="icon" href="https://emojis.wiki/emoji-pics/facebook/pizza-facebook.png">


  <body>
    <header>
      <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
          <a class="logo" href="<%= root_url %>">SliceNYC</a>
          <nav>
            <ul>
              <div class="dropdown">
                <button class="dropbtn">Pie Options
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="dropdown-content">
                  <li><%= link_to "Cheeses", cheeses_path %></li>
                  <li><%= link_to "Crusts", crusts_path %></li>
                  <li><%= link_to "Sauces", sauces_path %></li>
                  <li><%= link_to "Toppings", toppings_path %></li>
                </div>
              </div>
              <li><%= link_to "Categories", categories_path %></li>
              <li><%= link_to "Pies", pies_path%></li>
              <li><%= link_to "Restaurants", restaurants_path %></li>
              <% if logged_in? %>
                <%= link_to "Log Out", logout_path, method: :delete, class:"navbar-brand" %>
              <% else %>
                <%= link_to "Login", login_path %>
                <%= link_to "Sign Up", signup_path %>
              <% end %>
            </ul>
          </nav>
          </div>
        </div>
    </header>



    <% if flash[:alert] %>
      <div class="container">
          <div class="alert"><%= flash[:alert] %></div>
      </div>
    <% end %>

    <% if flash[:error_alert] %>
      <div class="container">
          <div class="error_alert"><%= flash[:error_alert] %></div>
      </div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>

  </body>

  <footer>
  </footer>
</html>
